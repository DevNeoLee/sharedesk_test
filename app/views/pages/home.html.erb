  </p>
</div>



<%# mid-search form %>
<div class="container-fluid mb-3 border p-4 shadow">
    <%= search_form_for @search, url: search_path, method: :get do |f| %>
        <div class="row">
            <div class="col-md-2">
                <%= f.submit %>
            </div>
            <div class="col-md-6">
                <%= f.search_field :address_cont, placeholder: "where are you going?", class: "form-control"%>
            </div>
            <div class="col-md-2">
                <%= text_field_tag :start_date, placeholder: "start date", class:"form-control", id: "start_date"%>
            </div>
            <div class="col-md-2">
                <%= text_field_tag :end_date, placeholder: "end date", class:"form-control", id: "end_date"%>
            </div>
        </div>
    <% end %>
</div>

