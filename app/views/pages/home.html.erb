<%# customer reviews %>
<div class="jumbotron shadow">
    <div class="text-center">
        <h2>Customer Reviews</h2>
    </div>
    <div class="col-md-8">
        <% @reviews.each do |review| %>
            <div class="card shadow mb-3 ">
                <div class="row">
                    <div class="col-md-3">
                        <%= @rooms.find(review.room_id).listing_name %>
                    </div>
                    <div class="col-md-9">
                        <div class="card-body">
                            <div class="row">
                                <div class="card-title">
                                    <%=review.comment %>
                                </div>
                                <div class="card-text">
                                    <h5><%= review.star %></h5>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
</div>

