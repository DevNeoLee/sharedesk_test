
<div class="row">
    <% if @room.images.attached? %>
    <% @room.images.each do |image| %>
        <div class="col-md-4">
            <div class="card card-header">
                <div class="card-header preview">
                    <%= image_tag image %>
                </div>
            </div>
            <div class="card-body">
                <span class="pull-right">
                    <i class="fa fa-times fa-lg"></i>
                </span>
            </div>
        </div>
    <% end %>   
<% end %>    
</div>