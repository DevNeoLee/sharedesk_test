<div class="col-md-12">
    <div class="row">
        <div class="col-md-3 bg-dark">
            <div class="text-center">
                <%= image_tag @user.default_avatar, class: "avatar-medium" %>
            </div>
            <div class="card">
                <div class="card-header">
                    Verification
                </div>
                <div class="card-body">
                    Email Address<br>
                    Phone Number
                </div>
            </div>
        </div>
        <div class="col-md-9 bg-light">
            <div class="row m-2">    
                <%= @user.name %>           
            </div>
            <div class="row m-2">
                <%= @user.description %>
            </div>
            <div class="row m-2">
                <h4>Your Listings(<%= @rooms.length%>) locations  </h4>   
            </div>
            <div class="row">        
                <% @rooms.each do |room| %>
                    <div class="col-md-4">
                    <%= link_to room_path(room.id) do %>
                        <div class="card mb-1">
                            <div class="card-header">
                                <h4><%= room.listing_name %></h4>                     
                            </div>
                            <%= image_tag room.medium_image(room.images[0]), class: "img-fluid" %>
                            <div class="card-body">
                                <div class="card-text">
                                    <%= room.listing_name %>
                                </div>
                                <div class="card-text">
                                    <%= room.address %>                                    
                                </div>
                            </div>                                  
                        </div>                                                        
                    <% end %>                                      
                    </div>
                <% end %>                                                                
            </div>   
        </div>
    </div>
</div>



